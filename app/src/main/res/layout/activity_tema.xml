<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Tema">

    <TextView
            android:text="Color de Fondo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtpersona"
            android:textSize="26sp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="100dp"/>
    <Spinner
            android:layout_width="205dp"
            android:layout_height="37dp"
            android:id="@+id/Spinner1"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/txtpersona"
            android:layout_marginEnd="55dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="55dp"/>
    <TextView
            android:text="Color de Botones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtbotonColor"
            android:textSize="26sp"
            android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="100dp"
            app:layout_constraintTop_toBottomOf="@+id/Spinner1"
            tools:layout_editor_absoluteY="40dp"
            tools:layout_editor_absoluteX="49dp"/>
    <Spinner
            android:layout_width="205dp"
            android:layout_height="37dp"
            android:id="@+id/spinner2"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/txtbotonColor"
            android:layout_marginEnd="55dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="55dp"/>
    <Button
            android:id="@+id/btnGuardar"
            android:text="Guardar"
            android:textColor="#fff"
            android:textSize="20sp"
            android:layout_width="130dp"
            android:background="@drawable/bg"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/spinner2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="30dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp"/>
</android.support.constraint.ConstraintLayout>